generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  avatarUrl     String?
  googleId      String   @unique

  // Preferences
  visibleSignificance String[] @default(["major", "minor", "patch"])
  visibleCategories   String[] @default(["feature", "enhancement", "bugfix", "breaking", "deprecation", "performance", "security", "docs"])

  // Feed tracking
  lastSeenAt    DateTime?  // When user last marked feed as read

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userRepos      UserRepo[]
  starredChanges StarredChange[]
}

// Global repo data shared across all users
model GlobalRepo {
  id            String   @id @default(cuid())
  owner         String
  name          String
  url           String
  description   String?
  avatarUrl     String?

  createdAt     DateTime @default(now())
  lastFetchedAt DateTime?  // When we last checked GitHub for updates

  feedGroups    GlobalFeedGroup[]
  releases      GlobalRelease[]
  userRepos     UserRepo[]

  @@unique([owner, name])
}

// Shared feed groups (classified PRs)
model GlobalFeedGroup {
  id        String   @id @default(cuid())
  type      String   // 'pr' | 'daily'
  title     String
  prNumber  Int?
  prUrl     String?
  date      DateTime
  changes   Json     // Array of Change objects

  globalRepoId String
  globalRepo   GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)
}

// Shared releases with AI summaries
model GlobalRelease {
  id        String   @id @default(cuid())
  title     String
  tagName   String
  url       String
  date      DateTime
  body      String?
  summary   String?  // AI-generated summary of the release

  globalRepoId String
  globalRepo   GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)

  @@unique([globalRepoId, tagName])
}

// User's subscription to a repo with custom settings
model UserRepo {
  id               String   @id @default(cuid())
  displayName      String?
  customColor      String?
  feedSignificance String[] @default(["major", "minor", "patch", "internal"])

  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  globalRepoId String
  globalRepo   GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())

  @@unique([userId, globalRepoId])
}

model StarredChange {
  id        String   @id @default(cuid())
  changeId  String   // e.g., "owner/repo-pr-123"

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, changeId])
}
