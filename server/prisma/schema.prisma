generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model GlobalUpdate {
  id           String     @id @default(cuid())
  title        String
  summary      String?
  category     String     @default("enhancement")
  significance String     @default("minor")
  date         DateTime
  prCount      Int        @default(1)
  commitCount  Int        @default(0)
  globalRepoId String
  groupHash    String?    // SHA256 hash of sorted PR numbers for deduplication
  createdAt    DateTime   @default(now())
  globalRepo   GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)
  prs          GlobalPR[]

  @@unique([globalRepoId, groupHash])
  @@index([globalRepoId, date])
}

model GlobalPR {
  id           String        @id @default(cuid())
  prNumber     Int
  title        String
  body         String?
  url          String
  mergedAt     DateTime
  author       String?
  labels       String[]
  commits      Json
  updateId     String?
  globalRepoId String
  createdAt    DateTime      @default(now())
  update       GlobalUpdate? @relation(fields: [updateId], references: [id])
  globalRepo   GlobalRepo    @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)

  @@unique([globalRepoId, prNumber])
  @@index([updateId])
}

model GlobalRelease {
  id            String     @id @default(cuid())
  title         String
  tagName       String
  url           String
  publishedAt   DateTime?
  body          String?
  summary       String?
  releaseType   String?
  baseVersion   String?
  clusterId     String?
  isClusterHead Boolean    @default(true)
  globalRepoId  String
  createdAt     DateTime   @default(now())
  globalRepo    GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)

  @@unique([globalRepoId, tagName])
  @@index([clusterId])
}

model GlobalRepo {
  id              String          @id @default(cuid())
  owner           String
  name            String
  url             String
  description     String?
  avatarUrl       String?
  starCount       Int?
  homepage        String?         // Raw homepage URL from GitHub API
  docsUrl         String?         // Resolved/validated documentation URL
  docsValidatedAt DateTime?       // When URL was last validated
  subscriberCount Int             @default(0)
  createdAt       DateTime        @default(now())
  lastFetchedAt   DateTime?
  updates         GlobalUpdate[]
  prs             GlobalPR[]
  releases        GlobalRelease[]
  userRepos       UserRepo[]
  reports         Report[]

  @@unique([owner, name])
}

model StarredUpdate {
  id        String   @id @default(cuid())
  updateId  String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, updateId])
}

model User {
  id                  String          @id @default(cuid())
  email               String          @unique
  name                String?
  avatarUrl           String?
  googleId            String          @unique
  visibleSignificance String[]        @default(["major", "minor", "patch"])
  visibleCategories   String[]        @default(["feature", "enhancement", "bugfix", "breaking", "deprecation", "performance", "security", "docs"])
  createdAt           DateTime        @default(now())
  updatedAt           DateTime
  lastSeenAt          DateTime?
  starredUpdates      StarredUpdate[]
  userRepos           UserRepo[]
  reports             Report[]
}

model UserRepo {
  id               String     @id @default(cuid())
  displayName      String?
  customColor      String?
  feedSignificance String[]   @default(["major", "minor", "patch", "internal"])
  showReleases     Boolean    @default(true)
  status           String     @default("completed") // pending, indexing, completed, failed
  progress         String?    // Progress message during indexing
  error            String?    // Error message if indexing failed
  userId           String
  globalRepoId     String
  createdAt        DateTime   @default(now())
  globalRepo       GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, globalRepoId])
}

model Report {
  id           String     @id @default(cuid())
  title        String
  globalRepoId String
  globalRepo   GlobalRepo @relation(fields: [globalRepoId], references: [id], onDelete: Cascade)
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate    DateTime
  endDate      DateTime
  content      Json?
  markdown     String?
  status       String     @default("pending")
  progress     String?
  error        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([userId, createdAt])
  @@index([globalRepoId])
}

model session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
}
